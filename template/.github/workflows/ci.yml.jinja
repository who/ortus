name: CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4
{%- if language == 'python' %}

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"
{%- if package_manager == 'uv' %}

      - name: Install uv
        uses: astral-sh/setup-uv@v4

      - name: Install dependencies
        run: uv sync --frozen

      - name: Lint
        run: |
          uv run ruff check .
          uv run ruff format --check .

      - name: Test
        run: uv run pytest tests/ -v
{%- else %}

      - name: Install dependencies
        run: pip install -e ".[dev]"

      - name: Lint
        run: |
          ruff check .
          ruff format --check .

      - name: Test
        run: pytest tests/ -v
{%- endif %}
{%- elif language == 'typescript' %}

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "{{ package_manager }}"

      - name: Install dependencies
        run: {{ package_manager }} install

      - name: Lint
        run: {{ package_manager }} run lint

      - name: Test
        run: {{ package_manager }} test
{%- elif language == 'go' %}

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: "1.22"

      - name: Install dependencies
        run: go mod download

      - name: Lint
        uses: golangci/golangci-lint-action@v4
        with:
          version: latest

      - name: Test
        run: go test ./...
{%- elif language == 'rust' %}

      - name: Set up Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          components: rustfmt, clippy

      - name: Cache cargo
        uses: Swatinem/rust-cache@v2

      - name: Lint
        run: |
          cargo fmt --check
          cargo clippy -- -D warnings

      - name: Test
        run: cargo test
{%- else %}

      # TODO: Add CI steps for your language
      - name: Placeholder
        run: echo "Configure CI for your project"
{%- endif %}
